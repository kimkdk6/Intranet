	<select id="RMessage" parameterType="Integer" resultType="dto_vo.Emp.Message">

		select * from message where RECEIVEID =#{USERID} and recdel=1 order by msgnum desc

	</select>

	<select id="SMessage" parameterType="Integer" resultType="dto_vo.Emp.Message">

		select * from message where SENDID =#{USERID} and senddel=1 order by msgnum desc

	</select>


	<delete id="deleteRMessage" parameterType="Integer">
		UPDATE message SET recdel = 0 WHERE msgnum =#{msgnum}
	</delete>
	
	<delete id="deleteSMessage" parameterType="Integer">
		UPDATE message SET recdel = 0 WHERE msgnum =#{msgnum}
	</delete>

	<insert id="insertNewMessage" parameterType="dto_vo.Emp.Message">
		insert into
		 message(MSGNUM,SENDID,RECEIVEID,MSGTITLE,MSGCONTENT,MSGDATE)
		 values(#{MSGNUM},#{USERID},#{RECEIVEID},#{msgtitle},#{msgcontent},sysdate)
	</insert>
	
	
