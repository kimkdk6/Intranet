$(document).ready(function()
{
	$("#_viewer_menu").dynatree(
    {
		rootVisible: false,
		checkbox: true,
        selectMode: 3,
		clickFolderMode: 3,
		minExpandLevel: 1,
		children: menuJSON,
		onSelect: function(flag, dtnode)
		{
			var selKeys = $.map(dtnode.tree.getSelectedNodes(), function(node){
			    if(node.data.key.substr(0,3) !== 'usr' ) return;
				return node.data.key.substr(3);
			});
			var selTitles = $.map(dtnode.tree.getSelectedNodes(), function(node){
			    if(node.data.key.substr(0,3) !== 'usr' ) return;
				return node.data.title + " " + node.data.respname;
			});
			selectedKey = selKeys.join("|");
			selTitles = selTitles.join(", ");

            $("#_viewertext").val(selTitles);
            $("#_viewerkeys").val(selectedKey);
		}
	});

    $("#bt_rcversel").click(function(){
        var pos = $(this).position();
        var _left = pos.left;
        var _top  = pos.top;
        var _width = $("#sel_viewer").width() - $(this).width();
        $("#sel_viewer").css("left", _left - 100);
        $("#sel_viewer").css("top", _top+$(this).height());
        $("#sel_viewer").show();
    });
});

function chkf(f)
{
    if(!f.tome.checked && f.receiver.value.length == 0)
    {
        alert('받는이를 선택하세요');
        return false;
    }
    if(f.content.value.length == 0)
    {
        f.content.focus();
        alert('내용을 입력하세요');
        return false;
    }
    return true;
}

function _expand(id, flag)
{
    $("#"+id).dynatree("getRoot").visit(function(dtnode){ dtnode.expand(flag);});
}

